{
  "name": "ethglobal-istanbul-be",
  "version": "0.0.1",
  "description": "Backend APIs for EthGlobal Istanbul",
  "author": "Todsaporn Sangboon<nolifelover@gmail.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/main.js",
  "engines": {
    "node": "18"
  },
  "keywords": [
    "ethglobal-istanbul-be",
    "nestjs",
    "firebase",
    "firestore",
    "passport",
    "graphql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/social-bureau/ethglobal-istanbul-be"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NEST_ENABLE=true nest start",
    "start:dev": "cross-env NEST_ENABLE=true nest start --watch",
    "start:debug": "cross-env NEST_ENABLE=true nest start --debug --watch",
    "start:prod": "cross-env NEST_ENABLE=true node dist/main",
    "serve:dev": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:migrate": "docker-compose -f docker-compose.migrate.yml up -d",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:seed": "docker exec -it nest-api npm run seed",
    "docker": "docker-compose up -d",
    "docker:build": "docker-compose build"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@firebase/auth": "^0.23.2",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.10",
    "aws-sdk": "^2.1405.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "ethereumjs-util": "^7.1.5",
    "express": "^4.18.2",
    "firebase": "^10.3.0",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4.1",
    "fs": "^0.0.1-security",
    "graphql": "^16.8.1",
    "graphql-scalars": "1.20.1",
    "graphql-subscriptions": "2.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nestjs-firebase": "^10.0.0",
    "passport": "0.6.0",
    "passport-firebase-jwt": "^1.2.1",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.3.10",
    "@types/bcrypt": "5.0.0",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.0",
    "@types/lodash": "^4.14.197",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.0",
    "@types/supertest": "2.0.12",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "chance": "1.1.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.4",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-morph": "^17.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
